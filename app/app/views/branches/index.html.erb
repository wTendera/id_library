<h1 class="text-center">Listing branches</h1>
<%= link_to 'New Branch', new_branch_path,class: "btn btn-info btn-sm btn-menu"  %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Branch name</th>
      <th>Address</th>
      <th>Phone num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.branch_name %></td>
        <td><%= branch.address %></td>
        <td><%= branch.phone_num %></td>
        <td><%= link_to 'Show', branch %></td>
        <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
        <td><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

