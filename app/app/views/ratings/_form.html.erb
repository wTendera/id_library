<%= form_for(@rating) do |f| %>

  <div class="field">
    <%= f.label :client_id %><br>
    <%= f.number_field :client_id %>
  </div>

  <div class="field">
    <%= f.label :book_id %><br>
    <%= f.number_field :book_id %>
  </div>

  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating%>
  </div>


  <div class="field">
    <%= f.label :rating_date %><br>
    <%= f.date_select :rating_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
