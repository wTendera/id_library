<h1 class="text-center">Listing authors info</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Available</th>
      <th>Birth</th>
      <th>Books</th>
      <th>Categories</th>
      <th>Death</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td><%= info.name %></td>
        <td><%= info.amount %></td>
        <td><%= info.available %></td>
        <td><%= info.birth %></td>
        <td><%= info.books %></td>
        <td><%= info.categories %></td>
        <td><%= info.death %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
