<h1>Listing borrows</h1>

<%= link_to 'New Borrow', new_borrow_path,class: "btn btn-info btn-sm btn-menu"  %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Client name</th>
      <th>Book title</th>
      <th>Edition name</th>
      <th>Client</th>
      <th>Specimen</th>
      <th>Borrow date</th>
      <th>Return date</th>
      <th>Return final date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrows.each do |borrow| %>
      <tr>
        <td><%= borrow.client.client_name %></td>
        <td><%= borrow.book_copy.try(:book).try(:title) %></td>
        <td><%= borrow.book_copy.edition.edition_name %></td>
        <td><%= borrow.client_id %></td>
        <td><%= borrow.specimen_id %></td>
        <td><%= borrow.borrow_date %></td>
        <td><%= borrow.return_date %></td>
        <td><%= borrow.return_final_date %></td>
        <td><%= link_to 'Show', borrow %></td>
        <td><%= link_to 'Edit', edit_borrow_path(borrow) %></td>
        <td><%= link_to 'Destroy', borrow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
